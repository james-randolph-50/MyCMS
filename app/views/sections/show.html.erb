
<%= link_to("<< Back", sections_path, :class => 'back-link')%>

<div class="sections show">
    <h2>Show section</h2>

    <table summary="Page detail view">
        <tr>
            <th>Name</th>
                <td><%= @section.name %></td>
            </tr>
            <tr>
            <th>Subject ID</th>
                <td><%= @section.subject_id %></td>
            </tr>
            <th>Permalink</th>
                <td><%= @section.permalink %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= @section.position %></td>
            </tr>
                <th>Visible?</th>
                <td><%= @section.visible ? 'true' : 'false' %></td>
            </tr>
            <tr>
                <th>Content type</th>
                <td><%= @section.content_type %></td>
            </tr>
            <tr>
                <th>Content</th>
                <td><%= @section.content %></td>
            </tr>
            <tr>
                <th>Created</th>
                <td><%= @section.created_at %></td>
            </tr>
            <tr>
                <th>Updated</th>
                <td><%= @section.updated_at %></td>
            </tr>
        </table>
    
    </div>