<%= link_to("<< Back", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages delete">
    <h2>Delete page</h2>

    <%= form_for(@page, :method => 'delete') do |f| %>
    <p>Are you sure? This Page will be permanently deleted.</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
        <%= f.submit("Delete Page") %>
    </div>

    <% end %>
</div>